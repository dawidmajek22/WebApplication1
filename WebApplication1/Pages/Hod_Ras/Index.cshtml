@page
@model WebApplication1.Pages.Hod_Ras.IndexModel
@{
    ViewData["Title"] = "Hodowcy";
}
<h1>Hodowcy</h1>
<hr />
<a asp-page="Create" class="btn btn-success">
    <span class="bi bi-plus"></span>
</a>
<div style="max-height: 400px; overflow-y: auto; border: 1px solid #ccc;">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr class="text-center">
                <th>@Html.DisplayNameFor(model => model.Hod_Rasy[0].NAZWA)</th>
                <th>@Html.DisplayNameFor(model => model.Hod_Rasy[0].GRUPA)</th>
                <th>@Html.DisplayNameFor(model => model.Hod_Rasy[0].is_fci)</th>
                <th>@Html.DisplayNameFor(model => model.Hod_Rasy[0].nr_grupy)</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hod_rasy in Model.Hod_Rasy)
            {
                <tr class="text-center">
                    <td>@Html.DisplayFor(model => hod_rasy.NAZWA)</td>
                    <td>@Html.DisplayFor(model => hod_rasy.GRUPA)</td>
                    <td>@Html.DisplayFor(model => hod_rasy.is_fci)</td>
                    <td>@Html.DisplayFor(model => hod_rasy.nr_grupy)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@hod_rasy.ID" class="btn btn-primary btn-sm">
                            <span class="bi bi-pencil"></span>
                        </a>
                        <a asp-page="./Details" asp-route-id="@hod_rasy.ID" class="btn btn-info btn-sm">
                            <span class="bi bi-info-circle"></span>
                        </a>
                        <a asp-page="./Delete" asp-route-id="@hod_rasy.ID" class="btn btn-danger btn-sm">
                            <span class="bi bi-trash"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
