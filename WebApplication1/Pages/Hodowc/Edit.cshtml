@page
@model WebApplication1.Pages.Hodowc.EditModel
@{
    ViewData["Title"] = "Edytuj";
}

<h1></h1>
<hr />

<div class="row">
    <div class="col-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Hodowca.IdHodowcy" />
            <div class="form-group">
                <label asp-for="Hodowca.Imie" class="control-label"></label>
                <input asp-for="Hodowca.Imie" class="form-control" />
                <span asp-validation-for="Hodowca.Imie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hodowca.Nazwisko" class="control-label"></label>
                <input asp-for="Hodowca.Nazwisko" class="form-control" />
                <span asp-validation-for="Hodowca.Nazwisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-page="./Index" class="btn btn-primary" title="Powrót">
                    <i class="bi bi-arrow-left"></i>
                </a>
                <button type="submit" class="btn btn-success" title="Usuń">
                    <i class="bi bi-check"></i>
                </button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
