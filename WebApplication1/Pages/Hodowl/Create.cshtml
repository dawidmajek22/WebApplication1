@page
@model WebApplication1.Pages.Hodowl.CreateModel
@{
    ViewData["Title"] = "Utwórz";
}

<h1>Utwórz</h1>
<hr />
<div class="row">
    <div class="col-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Hodowla.Nazwa" class="control-label"></label>
                <input asp-for="Hodowla.Nazwa" class="form-control" />
                <span asp-validation-for="Hodowla.Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hodowla.Masc" class="control-label"></label>
                <input asp-for="Hodowla.Masc" class="form-control" />
                <span asp-validation-for="Hodowla.Masc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hodowla.IdHodowcy">Wybierz hodowce</label>
                <select asp-for="Hodowla.IdHodowcy" class="form-control" size="2">
                    @foreach (var h in Model.Hodowcy)
                    {
                        <option value="@h.IdHodowcy">@h.IdHodowcy - @h.Nazwisko @h.Imie</option>
                    }
                </select>
                <span asp-validation-for="Hodowla.IdHodowcy" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <a asp-page="./Index" class="btn btn-primary" title="Powrót">
                    <i class="bi bi-arrow-left"></i>
                </a>
                <button type="submit" class="btn btn-danger" title="Utwórz">
                    <i class="bi bi-check"></i>
                </button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
