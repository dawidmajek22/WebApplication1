@model WebApplication1.Pages.klasa_looku.IndexModel
@{
    ViewData["Title"] = "Hodowcy";
}
<h1>Hodowcy</h1>
<hr />
<a asp-page="Create" class="btn btn-success">
    <span class="bi bi-plus"></span>
</a>
<div style="max-height: 400px; overflow-y: auto; border: 1px solid #ccc;">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr class="text-center">
                <th>@Html.DisplayNameFor(model => model.klasa_lookup[0].KLASA_ID)</th>
                <th>@Html.DisplayNameFor(model => model.klasa_lookup[0].NAZWA)</th>
                <th>@Html.DisplayNameFor(model => model.klasa_lookup[0].OD_ILE_MIESIECY)</th>
                <th>@Html.DisplayNameFor(model => model.klasa_lookup[0].DO_ILE_MIESIECY)</th>
                <th>@Html.DisplayNameFor(model => model.klasa_lookup[0].TYP_OCENY)</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Klasa_lookup in Model.klasa_lookup)
            {
                <tr class="text-center">
                    <td>@Html.DisplayFor(model => Klasa_lookup.KLASA_ID)</td>
                    <td>@Html.DisplayFor(model => Klasa_lookup.NAZWA)</td>
                    <td>@Html.DisplayFor(model => Klasa_lookup.OD_ILE_MIESIECY)</td>
                    <td>@Html.DisplayFor(model => Klasa_lookup.DO_ILE_MIESIECY)</td>
                    <td>@Html.DisplayFor(model => Klasa_lookup.TYP_OCENY)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@Klasa_lookup.KLASA_ID" class="btn btn-primary btn-sm">
                            <span class="bi bi-pencil"></span>
                        </a>
                        <a asp-page="./Details" asp-route-id="@Klasa_lookup.KLASA_ID" class="btn btn-info btn-sm">
                            <span class="bi bi-info-circle"></span>
                        </a>
                        <a asp-page="./Delete" asp-route-id="@Klasa_lookup.KLASA_ID" class="btn btn-danger btn-sm">
                            <span class="bi bi-trash"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
